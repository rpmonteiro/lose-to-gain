{
    "extends": "tslint-config-airbnb",
    "rules": {
        "ter-indent": [true, 4],
        "no-increment-decrement": false,
        "trailing-comma": false,
        "variable-name": false,
        "align": false,
        "no-inferrable-types": true,
        "semicolon": false,
        "import-name": false,
        "arrow-parens": true,
        "ter-arrow-parens": true
    }
}
